<% if(user) { %>
  <div class="modal fade" id="user-profile-modal" role="dialog">
      <div class="modal-dialog modal-lg">
          <div class="modal-content">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title">Profile</h4>
              </div>
              <div class="modal-body">
                  <ul class="nav nav-tabs">
                      <li class="active"><a data-toggle="tab" href="#setting-profile">Setting</a></li>
                      <li><a data-toggle="tab" id="link-to-password-profile" href="#password-profile">Password Manage</a></li>
                  </ul>
                  <div class="tab-content">
                      <div id="setting-profile" class="tab-pane fade in active">
                          <div class="row">
                              <form class="form-horizontal" method="post" role="form" action="" class="display: flex!important;">
                                  <!-- left column -->
                                  <div class="col-md-4">
                                      <div class="text-center" id="div-update-avatar">
                                          <div id="image-edit-profile">
                                              <img src="images/avatars/<%= user.avatar %>" id="user-modal-avatar" class="avatar img-circle" alt="avatar">
                                          </div>
                                          <h6>Uploading Picture...</h6>
                                          <input type="file" class="form-control" id="input-change-avatar" name="avatar"><br>
                                          <div id="show-button-update-avatar"></div>
                                      </div>
                                      <input id="update-avatar-btn" type="button" class="btn btn-warning" value="Submit">
                                      <input id="cancel-update-avatar" type="button" class="btn btn-danger" value="Cancel">
                                  </div>
                                  <!-- edit form column -->
                                  <div class="col-md-8 personal-info">
                                      <div class="alert alert-danger alert-dismissable user-modal-alert-error">
                                          <span>Update user error example.</span>
                                      </div>
  
                                      <div class="alert alert-success alert-dismissable user-modal-alert-success">
                                          <span>Update user success example.</span>
                                      </div>
                                      <h3>Your Information</h3>
                                      <br>
                                      <div class="form-group">
                                          <label class="col-md-3 control-label">Email:</label>
                                          <div class="col-md-8">
                                              <input id="input-change-email" class="form-control" type="text" name="username" value="<%= user.local.email %>" disabled>
                                          </div>
                                      </div>
                                      <div class="form-group">
                                          <label class="col-md-3 control-label">Username:</label>
                                          <div class="col-md-8">
                                              <input id="input-change-username" class="form-control" type="text" name="username" value="<%= user.username %>">
                                          </div>
                                      </div>
                                      <div class="form-group">
                                          <label class="col-lg-3 control-label">Address:</label>
                                          <div class="col-lg-8">
                                              <input id="input-change-address" class="form-control" type="text" name="address" value="<%= user.address %>">
                                          </div>
                                      </div>
                                      <div class="form-group">
                                          <label class="col-lg-3 control-label">Phone:</label>
                                          <div class="col-lg-8">
                                              <input id="input-change-phone" class="form-control" type="phone" name="phone" value="<%= user.phone %>">
                                          </div>
                                      </div>
                                      <div class="form-group">
                                          <label class="col-md-3 control-label"></label>
                                          <div class="col-md-8">
                                              <input type="button" id="btn-update-user-modal" class="btn btn-warning" value="Save">
                                              <span></span>
                                              <input type="button" id="btn-cancel-user-modal" class="btn btn-danger" value="Cancel">
                                          </div>
                                      </div>
                                  </div>
                              </form>
                          </div>
                      </div>
                      <div id="password-profile" class="tab-pane fade">
                          <div class="col-md-9 personal-info">
                              <br>
                              <div class="alert alert-danger alert-dismissable user-modal-password-alert-error">
                                  <span>Update user error example.</span>
                              </div>

                              <div class="alert alert-success alert-dismissable user-modal-password-alert-success">
                                  <span>Update user success example.</span>
                              </div>
                              <br>
                              <h3>Update Password</h3>
                              <br>
                              <form class="form-horizontal" style="display:block!important;" method="post" role="form" action="">
                                  <div class="form-group">
                                      <label class="col-md-4 control-label">Password</label>
                                      <div class="col-md-8">
                                          <input id="input-change-current-password" class="form-control" type="password" name="current_password" placeholder="Enter your curent password...">
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-md-4 control-label">New Password</label>
                                      <div class="col-md-8">
                                          <input id="input-change-new-password" class="form-control" type="password" name="new_password" placeholder="Enter new password...">
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-md-4 control-label">Repeat-Password</label>
                                      <div class="col-md-8">
                                          <input id="input-change-confirm-new-password" class="form-control" type="password" name="confirm_new_password" placeholder="Enter confirm new password...">
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-md-4 control-label"></label>
                                      <div class="col-md-8">
                                          <input type="button" id="btn-update-password-modal" class="btn btn-primary custom-background-btn-primary" value="Save">
                                          <span></span>
                                          <input type="button" id="btn-cancel-password-modal" class="btn btn-default custom-background-btn-reset" value="Cancel">
                                      </div>
                                  </div>
                              </form>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
<% }; %>
